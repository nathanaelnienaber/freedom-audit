{
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useBlockStatements": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnreachable": "error"
      },
      "suspicious": {}
    },
    "ignore": ["dist/**/*"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
